[options]
# Database
db_host = False
db_user = "{{ odoo_user }}"
db_password = "{{ odoo_user_postgres_password }}"
# dbfilter = ^%d$
# list_db = False

; Log parameter
log_level = info

; Resources limitation
workers = 2
;limit_memory_soft = 364748365
;limit_memory_hard = 464748365

; Instance parameter
http_port = {{odoo_version}}69
longpolling_port = {{odoo_version}}72
data_dir = /opt/odoo{{odoo_version}}/data
without_demo = all
admin_passwd = {{admin_passwd}}
proxy_mode = True

addons_path = /opt/odoo{{odoo_version}}/odoo/addons,
                /opt/odoo{{odoo_version}}/odoo/odoo/addons,